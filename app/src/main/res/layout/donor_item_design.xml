<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

        <TextView
            android:id="@+id/donor_rec_name"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:text="Donor Name"
            android:textColor="#000000"
            android:textSize="20sp" />


        <TextView
            android:id="@+id/donor_rec_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/donor_rec_name"
            android:layout_toRightOf="@+id/donor_rec_name"
            android:text="Address"/>

        <TextView
            android:id="@+id/donor_rec_mobile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/donor_rec_address"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@id/donor_rec_name"
            android:text="9999999999" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/donor_rec_mobile"
            android:layout_toRightOf="@+id/donor_rec_name"
            android:id="@+id/donor_rec_divider"
            android:text="-------------------------------------------------------"/>

</RelativeLayout>