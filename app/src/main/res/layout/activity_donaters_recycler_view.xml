<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".FoodDonatersList">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:text="Donors and their donations  list"
        android:textStyle="bold"
        android:textSize="22sp"
        android:id="@+id/donor_list_label"/>



    <androidx.recyclerview.widget.RecyclerView
        android:layout_below="@+id/donor_list_label"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/recyclerViewDonors"></androidx.recyclerview.widget.RecyclerView>


</RelativeLayout>